<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Color for state pressed -->
    <item android:state_pressed="true"><shape>
            <solid android:color="#b2b2b2" />

            <stroke android:width="1dp" android:color="#b2b2b2" />

            <corners android:radius="10dp" />

            <padding android:bottom="0dp" />
        </shape></item>
    <!-- Color for state unpressed -->
    <item android:state_pressed="false"><shape>
            <gradient android:angle="270" android:endColor="#a4d8e0" android:startColor="#a4d8e0" />

            <stroke android:width="1dp" android:color="#a4d8e0" />

            <corners android:radius="10dp" />

            <padding android:bottom="0dp" />
        </shape></item>

</selector>